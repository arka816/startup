<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OTPActivity">

    <RelativeLayout
        android:id="@+id/otpHeader"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#700696"
        android:layout_alignParentEnd="true"
        android:layout_width="match_parent"
        android:layout_height="160dp">

        <TextView
            android:textSize="20sp"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="#700696"
            android:textColor="#fff"
            android:text="SIGN UP - STEP 2/2"
        />
    </RelativeLayout>

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/otpHeader"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-60dp"
        android:layout_marginBottom="40dp"
        android:src="@drawable/otpicon" />
    <TextView
        android:gravity="center"
        android:layout_marginTop="100dp"
        android:layout_below="@+id/otpHeader"
        android:id="@+id/otpText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="#700696"
        android:text="VERIFY MOBILE NUMBER"
    />
    <TextView
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/otpText1"
        android:id="@+id/otpNumber"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#700696"
        android:text=""
    />
    <LinearLayout
        android:layout_below="@+id/otpNumber"
        android:id="@+id/otpLayout"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">
        <EditText
            android:inputType="number"
            android:maxLength="1"
            android:id="@+id/otp1"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:textColor="#000"
        />
        <EditText
            android:inputType="number"
            android:maxLength="1"
            android:id="@+id/otp2"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:textColor="#000"
        />
        <EditText
            android:inputType="number"
            android:maxLength="1"
            android:id="@+id/otp3"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:textColor="#000"
        />
        <EditText
            android:inputType="number"
            android:maxLength="1"
            android:id="@+id/otp4"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:textColor="#000"
        />
    </LinearLayout>
    <Button
        android:id="@+id/otpButton"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@+id/otpLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:textSize="20sp"
        android:textColor="#fff"
        android:text="Verify OTP"
        android:background="@drawable/buttonotp" />
    <TextView
        android:layout_marginTop="10dp"
        android:layout_below="@+id/otpButton"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="#700696"
        android:text="Resend OTP ?"
        android:gravity="left"
    />
</RelativeLayout>